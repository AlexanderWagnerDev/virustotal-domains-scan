# VirusTotal API
VT_API_KEY=your_virustotal_api_key_here

# Domains to scan (comma-separated)
DOMAINS=example.com,malware.com,test-site.org

# Path where logs and JSON results are stored
DATA_DIR=/var/www/vt_scanner_data

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your-email@gmail.com
SMTP_FROM="VT Scanner <your-email@gmail.com>"
SMTP_PASS=your_app_password
TO_EMAIL=alerts@yourdomain.com

# Optional HTTP Basic Auth
CRON_USER=admin
CRON_PASS=securepassword123
